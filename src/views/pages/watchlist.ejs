<script>
function updateDays(entryId) {
  const checkboxes = document.querySelectorAll('.day-checkbox-' + entryId);
  const days = [];
  checkboxes.forEach(cb => {
    if (cb.checked) days.push(parseInt(cb.value));
  });

  fetch('/api/watchlist/' + entryId + '/days', {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ days })
  });
}

function toggleEpisodeEdit(entryId) {
  const form = document.getElementById('episode-form-' + entryId);
  form.classList.toggle('hidden');
}

async function updateEpisode(entryId) {
  const season = parseInt(document.getElementById('season-' + entryId).value) || 1;
  const episode = parseInt(document.getElementById('episode-' + entryId).value) || 1;

  console.log('Saving:', { entryId, season, episode });

  try {
    const res = await fetch('/api/watchlist/' + entryId + '/episode', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ season, episode })
    });
    const data = await res.json();
    console.log('Response:', data);
    if (res.ok) {
      location.reload();
    } else {
      alert('Error: ' + (data.error || 'Failed to save'));
    }
  } catch (err) {
    console.error('Error:', err);
    alert('Failed to save episode');
  }
}
</script>

<div class="space-y-8">
  <h1 class="text-3xl font-bold">My Watchlist</h1>

  <!-- Add Show Section -->
  <div class="bg-gray-800 rounded-lg p-4">
    <h2 class="text-lg font-semibold mb-4">Add a Show</h2>
    <div class="flex gap-2">
      <input type="text"
             id="show-search"
             name="query"
             placeholder="Search for a TV show..."
             class="flex-1 bg-gray-700 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500"
             hx-get="/api/shows/search"
             hx-trigger="keyup changed delay:300ms"
             hx-target="#search-results">
    </div>
    <div id="search-results" class="mt-4"></div>
  </div>

  <%
    // Helper to convert day number to name
    const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    function formatDays(assignments) {
      if (!assignments || assignments.length === 0) return 'No days assigned';
      return assignments.map(a => dayNames[a.dayOfWeek]).sort((a, b) => {
        return dayNames.indexOf(a) - dayNames.indexOf(b);
      }).join(', ');
    }
  %>

  <!-- Currently Watching -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold text-green-400">Currently Watching</h2>

    <% if (watching.length === 0) { %>
    <p class="text-gray-400">No shows currently in rotation. Promote a show from your queue to start watching!</p>
    <% } else { %>
    <div class="space-y-2" id="watching-items">
      <% watching.forEach((entry) => { %>
      <div class="bg-gray-800 rounded-lg p-4 border-l-4 border-green-500">
        <div class="flex gap-4 items-center">
          <% if (entry.show.posterPath) { %>
          <img src="https://image.tmdb.org/t/p/w92<%= entry.show.posterPath %>"
               alt="<%= entry.show.title %>"
               class="w-12 rounded">
          <% } else { %>
          <div class="w-12 h-18 bg-gray-700 rounded flex items-center justify-center text-gray-500 text-xs">No img</div>
          <% } %>
          <div class="flex-1">
            <h3 class="font-semibold"><%= entry.show.title %></h3>
            <p class="text-sm text-gray-400">
              <span class="cursor-pointer hover:text-purple-400" onclick="toggleEpisodeEdit(<%= entry.id %>)">
                S<%= entry.currentSeason %>E<%= entry.currentEpisode %> ✏️
              </span>
              &middot; <%= entry.show.episodeRuntime %>min episodes
            </p>
            <!-- Episode Edit Form (hidden by default) -->
            <div id="episode-form-<%= entry.id %>" class="hidden mt-2 flex gap-2 items-center">
              <label class="text-xs text-gray-400">S:</label>
              <input type="number" id="season-<%= entry.id %>" value="<%= entry.currentSeason %>" min="1"
                     class="w-12 bg-gray-700 rounded px-2 py-1 text-sm">
              <label class="text-xs text-gray-400">E:</label>
              <input type="number" id="episode-<%= entry.id %>" value="<%= entry.currentEpisode %>" min="1"
                     class="w-12 bg-gray-700 rounded px-2 py-1 text-sm">
              <button type="button" onclick="event.stopPropagation(); updateEpisode(<%= entry.id %>)"
                      class="bg-purple-600 hover:bg-purple-700 px-2 py-1 rounded text-xs">Save</button>
              <button type="button" onclick="event.stopPropagation(); toggleEpisodeEdit(<%= entry.id %>)"
                      class="text-gray-400 hover:text-gray-300 text-xs">Cancel</button>
            </div>
          </div>
          <div class="flex gap-2">
            <button type="button"
                    hx-post="/api/watchlist/<%= entry.id %>/demote"
                    hx-swap="none"
                    hx-confirm="Move this show back to queue?"
                    class="text-yellow-400 hover:text-yellow-300 text-sm">
              Demote
            </button>
            <button type="button"
                    hx-post="/api/watchlist/<%= entry.id %>/finish"
                    hx-swap="none"
                    hx-confirm="Mark this show as finished?"
                    class="text-green-400 hover:text-green-300 text-sm">
              Finish
            </button>
            <button type="button"
                    hx-delete="/api/watchlist/<%= entry.id %>"
                    hx-target="closest div.bg-gray-800"
                    hx-swap="outerHTML"
                    hx-confirm="Remove this show?"
                    class="text-red-400 hover:text-red-300">
              Remove
            </button>
          </div>
        </div>
        <!-- Day Selection -->
        <div class="mt-3 pt-3 border-t border-gray-700">
          <span class="text-xs text-gray-400 mr-2">Days:</span>
          <%
            const entryDays = entry.dayAssignments.map(a => a.dayOfWeek);
            dayNames.forEach((day, idx) => {
          %>
          <label class="inline-flex items-center mr-2 cursor-pointer">
            <input type="checkbox"
                   class="day-checkbox-<%= entry.id %> sr-only peer"
                   value="<%= idx %>"
                   <%= entryDays.includes(idx) ? 'checked' : '' %>
                   onchange="updateDays(<%= entry.id %>)">
            <span class="px-2 py-1 text-xs rounded
                         peer-checked:bg-purple-600 peer-checked:text-white
                         bg-gray-700 text-gray-400 hover:bg-gray-600">
              <%= day %>
            </span>
          </label>
          <% }) %>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>

  <!-- Queue -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold text-yellow-400">Queue</h2>

    <% if (queued.length === 0) { %>
    <p class="text-gray-400">Your queue is empty. Search for shows above to add them!</p>
    <% } else { %>
    <div class="space-y-2" id="queue-items">
      <% queued.forEach((entry, index) => { %>
      <div class="bg-gray-800 rounded-lg p-4 border-l-4 border-yellow-500">
        <div class="flex gap-4 items-center">
          <span class="text-2xl font-bold text-gray-600 w-8"><%= index + 1 %></span>
          <% if (entry.show.posterPath) { %>
          <img src="https://image.tmdb.org/t/p/w92<%= entry.show.posterPath %>"
               alt="<%= entry.show.title %>"
               class="w-12 rounded">
          <% } else { %>
          <div class="w-12 h-18 bg-gray-700 rounded flex items-center justify-center text-gray-500 text-xs">No img</div>
          <% } %>
          <div class="flex-1">
            <h3 class="font-semibold"><%= entry.show.title %></h3>
            <p class="text-sm text-gray-400">
              <span class="cursor-pointer hover:text-purple-400" onclick="toggleEpisodeEdit(<%= entry.id %>)">
                Start at S<%= entry.currentSeason %>E<%= entry.currentEpisode %> ✏️
              </span>
              &middot; <%= entry.show.totalEpisodes %> eps &middot; <%= entry.show.episodeRuntime %>min
            </p>
            <!-- Episode Edit Form (hidden by default) -->
            <div id="episode-form-<%= entry.id %>" class="hidden mt-2 flex gap-2 items-center">
              <label class="text-xs text-gray-400">S:</label>
              <input type="number" id="season-<%= entry.id %>" value="<%= entry.currentSeason %>" min="1"
                     class="w-12 bg-gray-700 rounded px-2 py-1 text-sm">
              <label class="text-xs text-gray-400">E:</label>
              <input type="number" id="episode-<%= entry.id %>" value="<%= entry.currentEpisode %>" min="1"
                     class="w-12 bg-gray-700 rounded px-2 py-1 text-sm">
              <button type="button" onclick="event.stopPropagation(); updateEpisode(<%= entry.id %>)"
                      class="bg-purple-600 hover:bg-purple-700 px-2 py-1 rounded text-xs">Save</button>
              <button type="button" onclick="event.stopPropagation(); toggleEpisodeEdit(<%= entry.id %>)"
                      class="text-gray-400 hover:text-gray-300 text-xs">Cancel</button>
            </div>
          </div>
          <div class="flex gap-2">
            <button type="button"
                    hx-post="/api/watchlist/<%= entry.id %>/promote"
                    hx-swap="none"
                    class="bg-purple-600 hover:bg-purple-700 px-3 py-1 rounded text-sm">
              Promote
            </button>
            <button type="button"
                    hx-delete="/api/watchlist/<%= entry.id %>"
                    hx-target="closest div.bg-gray-800"
                    hx-swap="outerHTML"
                    hx-confirm="Remove this show?"
                    class="text-red-400 hover:text-red-300">
              Remove
            </button>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</div>
